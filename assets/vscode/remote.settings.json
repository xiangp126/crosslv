{
    "clangd.arguments": [
        "--log=error",
        "--enable-config",
        "--pretty",
        "--background-index",
        "-j=18",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--header-insertion=never",
        "--fallback-style=LLVM",
        "--clang-tidy",
        "--pch-storage=disk",
    ],
    "clangd.path": "clangd",
    "clangd.checkUpdates": true,
    "remote.autoForwardPorts": false,
    "files.exclude": {
        "**/.vscode-server": true,
        "**/devops": true,
        "**/fortipkg": true,
        "**/Downloads": true,
        "**/Templates/": true,
        "**/mmt": true,
        "**/.usr/": true,
        "**/.bash_completion.d/": true
    }
}